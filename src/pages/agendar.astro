---
import Layout from "../layouts/Layout.astro";
import Agenda from "../components/Agenda.jsx";
---

<Layout title="Agendar Hora - KineCristian">
    <main class="page-container">
        <!-- Ambient Background similar to programs -->
        <div class="ambient-light"></div>

        <div class="content-wrapper">
            <Agenda client:only="react" />
        </div>
    </main>
</Layout>

<style>
    .page-container {
        min-height: 100vh;
        background: #0b1120;
        position: relative;
        padding-top: 100px; /* Space for navbar */
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-bottom: 50px;
    }

    .ambient-light {
        position: absolute;
        top: -10%;
        width: 800px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(87, 226, 229, 0.15),
            transparent 70%
        );
        border-radius: 50%;
        filter: blur(80px);
        pointer-events: none;
        z-index: 0;
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 1000px;
        padding: 0 1.5rem;
    }

    /* Global Styles for the React Component */
    :global(.agenda-container) {
        width: 100%;
    }

    :global(.agenda-card) {
        background: rgba(30, 41, 59, 0.5);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 3rem;
        color: #fff;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    :global(.agenda-header) {
        text-align: center;
        margin-bottom: 3rem;
    }

    :global(.agenda-header h2) {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #fff, #a5f3fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    :global(.agenda-header p) {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    :global(.agenda-grid) {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    :global(.calendar-wrapper) {
        background: rgba(15, 23, 42, 0.6);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    :global(.slots-grid) {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
        margin-bottom: 2rem;
    }

    :global(.slot-btn) {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        padding: 0.75rem 0.5rem;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: 500;
    }

    :global(.slot-btn:hover) {
        background: rgba(87, 226, 229, 0.1);
        border-color: var(--color-primary);
    }

    :global(.slot-btn.active) {
        background: var(--color-primary);
        color: #0b1120;
        border-color: var(--color-primary);
        font-weight: 700;
    }

    :global(.continue-btn),
    :global(.confirm-btn) {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(90deg, #fff, #e2e8f0);
        border: none;
        border-radius: 8px;
        color: #0f172a;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.2s;
        margin-top: auto;
    }

    :global(.continue-btn:disabled) {
        opacity: 0.5;
        cursor: not-allowed;
        background: #475569;
        color: #94a3b8;
    }

    :global(.continue-btn:hover:not(:disabled)),
    :global(.confirm-btn:hover) {
        transform: translateY(-2px);
    }

    :global(.current-date-display) {
        background: rgba(87, 226, 229, 0.1);
        color: var(--color-primary);
        padding: 0.75rem;
        border-radius: 8px;
        text-align: center;
        font-weight: 600;
        text-transform: capitalize;
        margin-bottom: 1rem;
    }

    :global(.form-section) {
        max-width: 500px;
        margin: 0 auto;
    }

    :global(.form-group) {
        margin-bottom: 1.5rem;
    }

    :global(.form-group label) {
        display: block;
        margin-bottom: 0.5rem;
        color: #cbd5e1;
        font-size: 0.9rem;
    }

    :global(.form-group input),
    :global(.form-group select) {
        width: 100%;
        padding: 0.8rem;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: #fff;
        font-size: 1rem;
    }

    :global(.form-actions) {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    :global(.back-btn) {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 1rem 2rem;
        border-radius: 8px;
        cursor: pointer;
    }

    :global(.success-message) {
        text-align: center;
        padding: 2rem;
    }

    :global(.success-icon) {
        margin-bottom: 2rem;
    }

    :global(.reset-btn) {
        background: transparent;
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        margin-top: 2rem;
        cursor: pointer;
    }

    :global(.reset-btn:hover) {
        background: var(--color-primary);
        color: #0b1120;
    }

    @media (max-width: 768px) {
        :global(.agenda-grid) {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        :global(.agenda-card) {
            padding: 1.5rem;
        }
    }
</style>
