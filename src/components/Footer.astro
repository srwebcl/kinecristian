<style>
    .footer {
        background-color: #050608;
        padding: 4rem 1.5rem 2rem 1.5rem; /* Ensure consistent padding */
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        color: #a0a0a0;
        width: 100%;
        box-sizing: border-box;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 0.8fr 1.2fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .logo {
        display: inline-block;
        font-family: var(--font-heading, sans-serif);
        font-size: 1.5rem;
        font-weight: 900;
        color: #fff !important;
        text-decoration: none !important;
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .text-primary {
        color: var(--color-primary, #57e2e5);
    }

    .brand-desc {
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        color: #a0a0a0;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: #fff !important;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .social-link:hover {
        background: var(--color-primary);
        color: #000 !important;
        transform: translateY(-2px);
    }

    .col-title {
        color: #fff;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
        font-family: var(--font-heading);
    }

    .footer-nav {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-nav li {
        margin-bottom: 1rem;
    }

    .footer-nav a {
        color: #a0a0a0 !important;
        text-decoration: none !important;
        transition: color 0.3s ease;
        display: block;
    }

    .footer-nav a:hover {
        color: var(--color-primary) !important;
        padding-left: 5px;
    }

    .contact-line {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.2rem;
        align-items: flex-start;
    }

    .c-icon {
        font-size: 1.2rem;
    }

    .c-text {
        margin: 0;
        line-height: 1.4;
    }

    .contact-line a {
        color: #a0a0a0 !important;
        text-decoration: none !important;
        transition: color 0.3s ease;
    }

    .contact-line a:hover {
        color: #fff !important;
    }

    .text-xs {
        font-size: 0.8rem;
        color: #666;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 2rem;
        text-align: center;
        font-size: 0.85rem;
        color: #666;
    }

    @media (max-width: 900px) {
        .footer {
            padding-top: 3rem;
            padding-bottom: 6rem; /* Extra space for WhatsApp button */
        }

        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .footer-col {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .social-links {
            justify-content: center;
        }

        .contact-line {
            justify-content: center;
            text-align: center;
        }
    }
</style>
