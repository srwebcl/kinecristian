<style>
    .contact-section {
        padding: 100px 0;
        background: #080a0f;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-title {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #fff;
    }

    .section-subtitle {
        color: #94a3b8;
    }

    .highlight {
        color: var(--color-primary);
        font-weight: 600;
    }

    .contact-wrapper {
        display: grid;
        grid-template-columns: 1.5fr 1fr; /* Give more space to Agenda */
        gap: 3rem;
        align-items: start;
    }

    /* Contact Info Side */
    .contact-info {
        background: #11151e;
        padding: 2.5rem;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        height: 100%;
    }

    .contact-info h3 {
        color: #fff;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .coverage-box {
        background: rgba(255, 255, 255, 0.03);
        padding: 1.5rem;
        border-radius: 10px;
        margin: 1.5rem 0;
        border-left: 3px solid var(--color-primary);
    }

    .coverage-box h4 {
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .coverage-box ul {
        list-style: none;
        padding: 0;
        margin: 0;
        padding-left: 1.2rem;
    }

    .coverage-box li {
        position: relative;
        margin-bottom: 0.3rem;
        color: var(--color-text-muted);
    }

    .coverage-box li::before {
        content: "‚Ä¢";
        color: var(--color-primary);
        position: absolute;
        left: -1rem;
    }

    .contact-details {
        margin: 2rem 0;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .detail-item a {
        color: var(--color-primary);
        text-decoration: none;
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: rgba(87, 226, 229, 0.05); /* Tint of primary */
        padding: 1rem;
        border-radius: 10px;
        margin-top: 2rem;
    }

    .badge-icon {
        font-size: 2rem;
    }

    .badge-text {
        font-size: 0.9rem;
        color: #94a3b8;
    }

    .badge-text strong {
        display: block;
        color: #fff;
    }

    @media (max-width: 900px) {
        .contact-wrapper {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .contact-info {
            order: 2; /* Put info below agenda on mobile */
        }
    }
</style>
